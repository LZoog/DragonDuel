
<div id="battlefront">
  <a href="#" id="enter">ENTER</a>
</div>

<section id="battlefield">
  <% if (level == 1) { %>
  <form action="/duel" method="post">
    <input type="hidden" name="leave" id="leave" value="false" />
    <input type="submit" id="leave-btn" value="Leave Battlefield" />
  </form>
  <% } %>

  <h1>YOU ARE ON THE BATTLEFIELD</h1>

  <div id="new-connect"></div>

  <div id="connected">
    <% users.forEach(function(user) { %>
    <div class="conn-user">
      <form action="/duel" method="post">
        <input type="hidden" class="conn-username" name="username" value="<%=user.local.username%>" />
        <input type="hidden" class="your-power" name="yourPower" value="<%=power%>" />
        <input type="hidden" class="conn-power" name="connPower" value="<%=user.local.power%>" />
        <input type="submit" class="duel-user <%=user.local.color%>" value="" />
      <a href="/users/<%=user.local.username%>">@<%= user.local.username %></a>
      </form>
    </div>
    <% }); %>
  </div>
</section>
